<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaloriesCounter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/waterspout</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CaloriesText">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CaloriesText.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CaloriesText.Primary.Little">
        <item name="android:textSize">@dimen/font_size_little</item>
    </style>

    <style name="CaloriesText.Primary.Normal">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="CaloriesText.Secondary">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CaloriesText.Secondary.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="CaloriesTextBold">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CaloriesTextBold.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CaloriesTextBold.Primary.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="CaloriesTextBold.Primary.Huge">
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

    <style name="CaloriesTextBold.Primary.XHuge">
        <item name="android:textSize">@dimen/font_size_xhuge</item>
    </style>

    <style name="CaloriesTextBold.Primary.Giant">
        <item name="android:textSize">@dimen/font_size_giant</item>
    </style>

    <style name="CaloriesEatingCard" parent="CardView">
        <item name="android:maxHeight">170dp</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="cardCornerRadius">13dp</item>
    </style>

</resources>

